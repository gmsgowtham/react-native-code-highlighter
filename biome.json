{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"includes": [
			"src/**",
			"example/**",
			"biome.json",
			"package.json",
			"renovate.json",
			"tsconfig.json",
			"babel.config.js",
			"tsconfig.build.json"
		]
	},
	"javascript": {
		"jsxRuntime": "reactClassic"
	}
}
